<% content_for :head do %>
  <title><%= @title %></title>
  <meta name="description" content="<%= @title %>に関する情報です。この商品を欲しい人、持ってる人を表示しています。">
<% end %>

<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% if @item.large_image %>
            <img src="<%= @item.large_image %>" alt="<%= @item.title %>" />
            <% else %>
            <%= image_tag("no-image.png", alt: item.get('ItemAttributes/Title')) %>
            <% end %>
        </div>
      </div>
      <div class="title">
            <%= @item.title %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Haveしたユーザー一覧 %>
          <% @haveusers.each do |u| %>
            <span class="gravatar">
              <%= link_to gravatar_for(u, options = { size: 24 }), user_path(u) %>
            </span>
          <% end %>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Wantしたユーザー一覧 %>
          <% @wantusers.each do |u| %>
              <%= link_to gravatar_for(u,  options = { size: 24 }), user_path(u) %>
          <% end %>
        </div>
      </div>
      <div class="text-center">
          <% #TODO 正しいリンク先に %>
              <%= link_to(image_tag("amazon-button.png", {alt: "Amazon詳細ページへ"}), @item.detail_page_url) %>
      </div>
    </div>
  </div>
</div>